---
import HeaderLink from "./HeaderLink.astro";
---

<header>
  <nav>
    <img src="/favicon.svg" alt="favicon" style="box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.3);" />
    <HeaderLink href="/">家</HeaderLink>
    <span>|</span>
    <HeaderLink href="/words">文</HeaderLink>
    <span>|</span>
    <HeaderLink href="/declarations">声明</HeaderLink>
  </nav>
</header>
<style>
  header {
    margin: 0em 0 2em;
  }
  nav {
    display: flex;
    align-items: center;
    padding: 10px;
    border-width: 2px;
    border-color: #222;
    border-radius: 5px;
  }
  img {
    width: 32px;
    height: 32px;
    margin: 8px;
    margin-right: 20px;
    border-radius: 5px;
  }
  span {
    margin: 10px;
    font-weight: bold;
  }
</style>
