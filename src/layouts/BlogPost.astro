---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { AUTHORS } from "../config";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate: string;
    author?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, author, heroImage },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        {heroImage && <img width={720} height={360} src={heroImage} alt="" class="cover" />}
        <h1 class="title">{title}</h1>
        <time>{pubDate}</time>
        <slot />
        <br />
        {author && <p>✏️ 文 / {AUTHORS[author].cnName}</p>}
      </article>
    </main>
    <Footer />
  </body>
</html>
